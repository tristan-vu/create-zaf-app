{
    "name": "create-zaf-app",
    "version": "0.0.0",
    "description": "A React scaffold for developers to build Zendesk App Framework (ZAF) apps",
    "main": "./dist/main.js",
    "bin": {
      "create-zaf-app": "./cli.js"
    },  
    "scripts": {
      "start": "webpack -w --env development",
      "build": "NODE_ENV=production webpack --mode production && npm run validate && echo \"Package is ready to upload to Zendesk\"",
      "test": "jest --env=jsdom --coverage",
      "server": "zcli apps:server ./dist",
      "validate": "zcli apps:package ./dist",
      "lint": "eslint -c .eslintrc.json --ext .ts,.tsx src __tests__",
      "prettier": "prettier --check ."
  },
  "dependencies": {
    "@zendesk/sell-zaf-app-toolbox": "github:zendesk/sell-zaf-app-toolbox#v1.0.8",
    "@zendeskgarden/css-variables": "^6.4.5",
    "@zendeskgarden/react-dropdowns": "^8.28.2",
    "@zendeskgarden/react-grid": "^8.28.2",
    "@zendeskgarden/react-loaders": "^8.28.2",
    "@zendeskgarden/react-theming": "^8.28.2",
    "@zendeskgarden/svg-icons": "^6.27.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@svgr/webpack": "^5.5.0",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/eslint-plugin-tslint": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@zendesk/zcli": "^1.0.0-beta.4",
    "autoprefixer": "^10.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "html-webpack-plugin": "^4.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "source-map-loader": "^1.1.3",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.2",
    "typescript": "^4.1.3",
    "typescript-plugin-css-modules": "^3.0.1",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0"
  }
}
